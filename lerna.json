{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "https://registry.npmjs.org",
      "access": "public",
      "allowBranch": ["master"],
      "message": "release: publish"
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "tagVersionPrefix": "v"
}
